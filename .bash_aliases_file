function laradock(){
	git clone https://github.com/Laradock/laradock.git 
	mkdir data
	cd laradock 
	pwd
	cp env-example .env
 	sed -i '' 's+DATA_PATH_HOST=~/.laradock/data+DATA_PATH_HOST=../data+g' .env
	cd ..
	pwd
	cp -rn .env.example .env
	sed -i '' 's:DB_HOST=127.0.0.1:DB_HOST=mysql:g' .env
	sed -i '' 's:REDIS_HOST=127.0.0.1:REDIS_HOST=redis:g' .env
	sed -i '' 's:DB_PASSWORD=.*:DB_PASSWORD=root:g' .env
	echo 'QUEUE_HOST=beanstalkd' >> .env
 }

alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias ls='ls --color=auto'


alias c='clear'
alias e='exit'
alias ~='cd ~'

#########################
# CD BACKSLASH SHORTHAND
#########################
alias .='cd ../'
alias cd..="cd .."
alias ..='cd ../../'
alias ...='cd ../../../'
alias ....='cd ../../../../'

alias dcup!="cd laradock;dc up -d nginx mysql phpmyadmin php-worker laravel-horizon redis redis-webui;cd ..;echo ''; echo 'Website: http://localhost'; echo 'Phpmyadmin: http://localhost:8081 root:root'; echo 'Redis: http://localhost:9987 laradock:laradock'"
alias dcrm!="cd laradock;dcrm;cd .."

